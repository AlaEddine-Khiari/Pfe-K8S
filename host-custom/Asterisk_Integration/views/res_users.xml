<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Form View for Custom Employee -->
    <record id="view_users_form" model="ir.ui.view">
        <field name="name">Asterisk_Integration.res.users.form</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <!-- Making the 'phone' page visible -->
            <page name="phone" position="attributes">
                <attribute name="invisible">0</attribute>
            </page>
            <!-- Adding new fields related to Asterisk under an existing group -->
            <group name="phone-preferences" position="after">
                <group name="asterisk-standard" string="Standard Asterisk Parameters">
                    <field name="asterisk_chan_type" />
                    <field name="internals" required="1" />
                    <field name="callerid" />
                    <field name="asterisk_server_id" />
                </group>
            </group>
        </field>
    </record>

    <!-- Simplified Form Modification for User Preferences -->
    <record id="view_users_form_simple_modif" model="ir.ui.view">
        <field name="name">Asterisk_Integration.users.preferences.form</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form_simple_modif" />
        <field name="arch" type="xml">
            <!-- Ensuring the 'phone' group is visible in the simpler form -->
            <group name="phone" position="attributes">
                <attribute name="invisible">0</attribute>
            </group>
        </field>
    </record>

</odoo>
