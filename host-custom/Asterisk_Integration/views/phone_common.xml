<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Template for injecting custom SCSS file -->
    <template
            id="_assets_primary_variables"
            name="Asterisk_Integration assets"
            inherit_id="web._assets_primary_variables"> <!-- Inheriting from Odoo's primary variable asset template -->
        <xpath expr="//link[last()]" position="after">
            <link
                    rel="stylesheet"
                    type="text/scss"
                    href="/Asterisk_Integration/static/src/scss/asterisk.scss"
                />
        </xpath>
    </template>

    <template id="assets_backend"
              name="mail assets"
              inherit_id="web.assets_backend"> <!-- Inheriting from Odoo's backend asset bundle -->
        <!-- Xpath to insert our content directly inside the inherited template -->
        <xpath expr="." position="inside">
            <script
                    type="text/javascript"
                    src="/Asterisk_Integration/static/src/js/click2dial.js"
                />
        </xpath>
    </template>

</odoo>