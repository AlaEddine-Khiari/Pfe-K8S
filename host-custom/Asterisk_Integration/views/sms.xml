<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- form view for Asterisk SMS integration -->
        <record id="view_asterisk_sms_form" model="ir.ui.view">
            <field name="name">asterisk.sms.form</field>
            <field name="model">asterisk.sms</field>
            <field name="arch" type="xml">
                <form string="SMS Sending">
                    <group>
                        <field name="message_destination"/>
                        <field name="message_body"/>
                    </group>
                    <footer>
                        <button string="Send Message" type="object" name="send_message" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- action for opening the SMS form view -->
        <record id="sms_action" model="ir.actions.act_window">
            <field name="name">Send SMS</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">asterisk.sms</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_asterisk_sms_form"/>
            <field name="target">new</field> <!-- Open in a new window (pop-up) -->
        </record>


        <!-- tree view for Asterisk SMS integration -->
        <record id="view_asterisk_sms_tree" model="ir.ui.view">
            <field name="name">asterisk.sms.tree</field>
            <field name="model">asterisk.sms</field>
            <field name="arch" type="xml">
                <tree string="SMS List">
                    <field name="message_destination"/>
                    <field name="message_body"/>
                </tree>
            </field>
        </record>

        <!-- action for opening the SMS list view -->
        <record id="sms_list_action" model="ir.actions.act_window">
            <field name="name">List SMS</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">asterisk.sms</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_asterisk_sms_tree"/>
            <field name="groups_id" eval="[(4, ref('base.group_system'))]"/> <!-- Only accessible by admin -->
        </record>

        <!-- Define the menu item to trigger the SMS list view -->
        <menuitem id="menu_asterisk_sms_list"
                  name="List SMS"
                  action="sms_list_action"
                  parent="asterisk_root"
                  sequence="7"/>
        <!--menu item to trigger the SMS form view -->
        <menuitem id="menu_asterisk_sms"
                  name="Asterisk SMS"
                  action="sms_action"
                  parent="contacts.menu_contacts"
                  sequence="3"/>
    </data>
</odoo>