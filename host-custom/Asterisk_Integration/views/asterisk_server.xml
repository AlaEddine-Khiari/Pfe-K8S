<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- Action for Asterisk Server -->
    <record id="ami_action" model="ir.actions.act_window">
        <field name="name">Asterisk Servers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">asterisk.server</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add Your Asterisk Server Configuration Here
            </p>
        </field>
    </record>

    <!-- Form View for Asterisk Server -->
    <record id="view_asterisk_server_form" model="ir.ui.view">
        <field name="name">asterisk.server.form</field>
        <field name="model">asterisk.server</field>
        <field name="arch" type="xml">
            <form string="Asterisk Server" create="true" edit="true">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                    <group name="ami" string="Asterisk Manager Config">
                        <field name="ip_address"/>
                        <field name="port"/>
                        <field name="login"/>
                        <field name="password" password="True"/>
                        <field name="context"/>
                        <field name="wait_time"/>
                        <button name="test_ami_connection" type="object" string="Test Connection to Asterisk" class="btn-primary"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

        <!-- Tree View for Asterisk Server -->
        <record id="view_asterisk_server_tree" model="ir.ui.view">
        <field name="name">asterisk.server.tree</field>
        <field name="model">asterisk.server</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="ip_address"/>
                <field name="port"/>
            </tree>
        </field>
    </record>

    <!-- Define a search view for the model -->
    <record id="view_asterisk_server_search" model="ir.ui.view">
        <field name="name">asterisk.server.search</field>
        <field name="model">asterisk.server</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <!-- Define the search view layout -->
            <search>
                <!-- Define filters and groupings -->
                <field name="name"/>
                <field name="ip_address"/>
                <separator/>
            </search>
        </field>
    </record>

    <!-- Menu Item for Asterisk Server -->
    <menuitem id="asterisk_root"
              groups="base.group_system"
              name="Asterisk PBX"
              sequence="10"/>

    <menuitem id="ami_root"
              name="Asterisk Servers"
              action="ami_action"
              parent="asterisk_root"
              sequence="2"/>

</odoo>
