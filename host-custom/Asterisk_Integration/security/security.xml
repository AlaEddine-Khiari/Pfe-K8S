<?xml version="1.0" encoding="utf-8" ?>
<odoo noupdate="1">

    <record id="asterisk_server_rule" model="ir.rule">
        <field name="name">Asterisk server multi-company</field>
        <field name="model_id" ref="model_asterisk_server" />
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
    </record>

    <!-- Define a new user group -->
    <record id="group_cannot_edit_delete_add" model="res.groups">
        <field name="name">Cannot Edit, Delete, or Add Group</field>
    </record>

    <!-- Define a security rule for the cdr.log model -->
    <record id="record_cdr_log_security_rule" model="ir.rule">
        <field name="name">Restrict Access to CDR Log</field>
        <field name="model_id" ref="model_cdr_log"/>
        <field name="groups" eval="[(4, ref('group_cannot_edit_delete_add'))]"/>
        <!-- Allow read, deny write, create, and unlink permissions -->
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="True"/>
    </record>

</odoo>
